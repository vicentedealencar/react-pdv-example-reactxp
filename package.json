{
  "name": "rxp-hello-world",
  "version": "1.2.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "lint": "tslint --project tsconfig.json -r tslint.json -r ./node_modules/tslint-microsoft-contrib --fix || true",
    "web": "npm-run-all clean --parallel web:*",
    "web:watch": "webpack --progress --colors --watch",
    "web:dev": "npm-run-all --serial web:bundle:wait web:dev:start",
    "web:bundle:wait": "wait-on ./dist/bundle.js",
    "web:dev:start": "live-server . --port=8090",
    "rn": "npm-run-all clean --parallel rn:bundle rn:start",
    "android": "npm-run-all clean --parallel rn:bundle rn:android",
    "ios": "npm-run-all clean --parallel rn:bundle rn:ios",
    "rn:bundle": "tsc --watch",
    "rn:start": "npm-run-all --serial rn:bundle:wait rn:run:start",
    "rn:android": "npm-run-all --serial rn:bundle:wait rn:run:android",
    "rn:ios": "npm-run-all --serial rn:bundle:wait rn:run:ios",
    "rn:bundle:wait": "wait-on ./dist/index.js",
    "rn:run:start": "node node_modules/react-native/local-cli/cli.js start",
    "rn:run:android": "node node_modules/react-native/local-cli/cli.js run-android",
    "rn:run:ios": "node node_modules/react-native/local-cli/cli.js run-ios"
  },
  "devDependencies": {
    "@types/webpack": "^4.4.0",
    "awesome-typescript-loader": "^5.0.0",
    "live-server": "^1.2.0",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "source-map-loader": "^0.2.3",
    "ts-node": "^6.0.3",
    "typescript": "^2.8.1",
    "wait-on": "^2.1.0",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "webpack-log": "^1.2.0"
  },
  "dependencies": {
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-native": "^0.54.0",
    "react-native-windows": "^0.54.0",
    "react-pdv": "^0.0.21",
    "reactxp": "^1.2.0",
    "reactxp-imagesvg": "^1.2.0",
    "reactxp-navigation": "^1.2.0",
    "reactxp-video": "^1.2.0"
  }
}
